{
	"manifest_version": 2,

	"name": "简书文章检测",
	"description": "检查简书上的文章是否在别的地方已经存在",
	"version": "0.0.1",

	"permissions": [
		"tabs",
		"http://www.jianshu.com/p/*"
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "menu.html"
	},
	"icons": {"48": "icon.png"},

	"background": {
		"scripts": ["servo.js"]
	},

	"content_scripts": [
		{
			"matches": ["http://www.jianshu.com/p/*"],
			"css": ["page.css"],
			"js": ["common.js", "kernel.js"],
			"run_at": "document_start"
		}
	]
}
